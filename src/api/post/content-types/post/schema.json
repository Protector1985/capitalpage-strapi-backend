{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Headline": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "Article": {
      "type": "richtext",
      "required": true
    },
    "MetaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 155
    },
    "Pictures": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Author": {
      "type": "string",
      "required": true,
      "default": "Michael"
    },
    "ProfilePic": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
